@model PMTool.Models.Task

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Task</legend>

    <div class="display-label">Project</div>
    <div class="display-field">@(Model.Project == null ? "None" : Model.Project.Name)</div>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">StartDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.StartDate)</div>

    <div class="display-label">EndDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.EndDate)</div>

    <div class="display-label">TaskHour</div>
    <div class="display-field">@String.Format("{0:F}", Model.TaskHour)</div>

    <div class="display-label">Priority</div>
    <div class="display-field">@(Model.Priority == null ? "None" : Model.Priority.Name)</div>

    <div class="display-label">IsLocked</div>
    <div class="display-field">@Model.IsLocked</div>

    <div class="display-label">IsActive</div>
    <div class="display-field">@Model.IsActive</div>

    <div class="display-label">ParentTaskId</div>
    <div class="display-field">@Model.ParentTaskId</div>

    <div class="display-label">ChildTask</div>
    <div class="display-field">@(Model.ChildTask == null ? "None" : Model.ChildTask.Count.ToString())</div>

    <div class="display-label">Attachments</div>
    <div class="display-field">@Model.Attachments</div>

    <div class="display-label">CreatedBy</div>
    <div class="display-field">@Model.CreatedBy</div>

    <div class="display-label">CreatedByUser</div>
    <div class="display-field">@(Model.CreatedByUser == null ? "None" : Model.CreatedByUser.LastName)</div>

    <div class="display-label">ModifieddBy</div>
    <div class="display-field">@Model.ModifieddBy</div>

    <div class="display-label">ModifiedByUser</div>
    <div class="display-field">@(Model.ModifiedByUser == null ? "None" : Model.ModifiedByUser.LastName)</div>

    <div class="display-label">CreateDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreateDate)</div>

    <div class="display-label">ModificationDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ModificationDate)</div>

    <div class="display-label">ActionDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ActionDate)</div>

    <div class="display-label">Users</div>
    <div class="display-field">@(Model.Users == null ? "None" : Model.Users.Count.ToString())</div>

    <div class="display-label">Followers</div>
    <div class="display-field">@(Model.Followers == null ? "None" : Model.Followers.Count.ToString())</div>

    <div class="display-label">Labels</div>
    <div class="display-field">@(Model.Labels == null ? "None" : Model.Labels.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


